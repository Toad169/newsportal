{
  "$schema": "https://json.schemastore.org/prettierrc",


  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",

  "plugins": ["@prettier/plugin-php"],
  "phpVersion": "auto",
  "trailingCommaPHP": true,
  "braceStyle": "1tbs",
  "singleLineOutput": false
}
